<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>KanBan Demo</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    
    @MvcHtmlString.Create(
      Bundle.Css()
          .Add("~/Content/bootstrap.css")
          .Add("~/Content/bootstrap-responsive.css")
          .Render("~/Content/combined_#.css"))
   
   @RenderSection("AdditionalStyles", false)
   
    <style type="text/css">
      body {
        padding-top: 60px;
         padding-bottom: 40px;
      }
    </style>

  </head>

   <body>
      <a href="https://github.com/jwcarroll/KanBan.Demo">
        <img style="position: absolute; top: 0; right: 0; border: 0; z-index: 9999" src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub">
      </a>
      
      <div class="navbar navbar-fixed-top">
         <div class="navbar-inner">
            <div class="container">
               <a class="brand" href="@Url.Action("Index", "ProjectList")">KanBan Demo</a>
               <div class="nav-collapse">
                  <ul class="nav">
                     @Html.NavigationListItem("Project List", "Index", "ProjectList")
                  </ul>
               </div>
            </div>
         </div>
      </div>

      <div class="container">

         @RenderBody()
         
         <hr/>

         <footer>
            <a href="https://twitter.com/share" class="twitter-share-button" data-text="Check out this demo using #knockoutjs, #ravendb and #signalr" data-hashtags="codestock">Tweet</a>
            <a href="https://twitter.com/jwcarroll" class="twitter-follow-button" data-show-count="false">Follow @@jwcarroll</a>
         </footer>

      </div> <!-- /container -->

    @MvcHtmlString.Create(
        Bundle.JavaScript()
        .Add("~/Scripts/modernizr-2.5.3.js")
        .Add("~/Scripts/jquery-1.7.2.js")
        .Add("~/Scripts/jquery-ui-1.8.18.js")
        .Add("~/Scripts/knockout-2.1.0.debug.js")
        .Add("~/Scripts/knockout.extenders.js")
        .Add("~/Scripts/underscore.js")
        .Add("~/Scripts/jquery.signalR-0.5.1.min.js")
        .Render("~/Content/core_#.js"))

    <script type="text/javascript" src="@Url.Content("~/signalr/hubs")"></script>

    @MvcHtmlString.Create(
        Bundle.JavaScript()
                .Add("~/Scripts/ViewModels/ProjectDataAccess.js")
                .Add("~/Scripts/ViewModels/Utils.js")
                .Add("~/Scripts/ViewModels/Messages.js")
                .Add("~/Scripts/ViewModels/UserStoryViewModel.js")
                .Add("~/Scripts/ViewModels/WorkQueueModel.js")
                .Add("~/Scripts/ViewModels/ProjectViewModel.js")
                .Add("~/Scripts/ViewModels/ProjectListViewModel.js")
        .Render("~/Content/viewModels_#.js"))
    
    <script type="text/javascript">!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } } (document, "script", "twitter-wjs");</script>    
    <script type="text/javascript">!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0]; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = "//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs); } } (document, "script", "twitter-wjs");</script>

    @RenderSection("AdditionalScript", false)
    
   </body>
   
</html>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>KanBan Demo</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    
    @MvcHtmlString.Create(
      Bundle.Css()
          .Add("~/Content/bootstrap.css")
          .Add("~/Content/bootstrap-responsive.css")
          .Render("~/App_Data/combined_#.css"))
   
   @RenderSection("AdditionalStyles", false)
   
    <style type="text/css">
      body {
        padding-top: 60px;
         padding-bottom: 40px;
      }
    </style>

  </head>

   <body>

      <div class="navbar navbar-fixed-top">
         <div class="navbar-inner">
            <div class="container">
               <a class="brand" href="@Url.Action("Index", "Project")">KanBan Demo</a>
               <div class="nav-collapse">
                  <ul class="nav">
                     @Html.NavigationListItem("Project", "Index", "Project")
                  </ul>
               </div>
            </div>
         </div>
      </div>

      <div class="container">

         @RenderBody()
         
         <hr/>

         <footer>
            <p>&copy; jwcarroll @DateTime.Now.Year</p>
         </footer>

      </div> <!-- /container -->

       <script type="text/javascript" src="@Url.Content("~/signalr/hubs")"></script>

    @MvcHtmlString.Create(
        Bundle.JavaScript()
        .Add("~/Scripts/modernizr-2.5.3.js")
        .Add("~/Scripts/jquery-1.7.2.js")
        .Add("~/Scripts/jquery-ui-1.8.18.js")
        .Add("~/Scripts/knockout-2.1.0.debug.js")
        .Add("~/Scripts/knockout.extenders.js")
        .Add("~/Scripts/underscore.js")
        .Add("~/Scripts/jquery.signalR-0.5.1.min.js")
        .Render("~/App_Data/core_#.js"))

    @MvcHtmlString.Create(
        Bundle.JavaScript()
                .Add("~/Scripts/ViewModels/ProjectDataAccess.js")
                .Add("~/Scripts/ViewModels/Utils.js")
                .Add("~/Scripts/ViewModels/Messages.js")
                .Add("~/Scripts/ViewModels/UserStoryViewModel.js")
                .Add("~/Scripts/ViewModels/WorkQueueModel.js")
                .Add("~/Scripts/ViewModels/ProjectViewModel.js")
                .Add("~/Scripts/ViewModels/ProjectListViewModel.js")
        .Render("~/App_Data/viewModels_#.js"))
        
    @RenderSection("AdditionalScript", false)
    
   </body>
   
</html>